<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.codeyang.auth.mapper.UserMapper">
    
    <sql id="BaseSql">
        `User`.id, `User`.username, `User`.`password`, `User`.nickname,
        `User`.email, `User`.avatar, `User`.create_user_id, `User`.create_time,
        `User`.update_user_id, `User`.update_time, `User`.home_url
    </sql>
    <select id="findByUsername" resultType="cn.codeyang.auth.entity.User">
        select * from t_user where username = #{username}
    </select>
    <select id="findByEmail" resultType="cn.codeyang.auth.entity.User">
        select * from t_user where email = #{email}
    </select>


</mapper>